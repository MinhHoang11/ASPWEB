@model GioHangViewModel

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Trang Thanh Toán</title>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #1b2838; /* Màu nền tương tự như giỏ hàng */
        color: #c7d5e0;
    }

    .container {
        margin: 0 auto;
        background-color: #2a2e35; /* Màu nền của container */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        max-width: 600px; /* Giới hạn chiều rộng cho dễ nhìn */
    }

    h2 {
        text-align: center;
        color: #ffffff; /* Màu chữ tiêu đề */
    }

    label {
        display: block;
        margin-bottom: 10px;
        font-weight: bold;
        color: #c7d5e0; /* Màu chữ cho label */
    }

    input[type="text"], input[type="tel"], input[type="number"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 4px;
        background-color: #171a21; /* Màu nền cho input */
        color: #c7d5e0; /* Màu chữ cho input */
    }

        input[type="text"]::placeholder, input[type="tel"]::placeholder {
            color: #888; /* Màu chữ cho placeholder */
        }

    button {
        background-color: #4a90e2; /* Màu nền cho nút */
        color: white;
        padding: 15px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
        font-size: 16px;
    }

        button:hover {
            background-color: #357abd; /* Màu nền khi hover */
        }

    .total {
        font-size: 1.5rem; /* Kích thước chữ lớn hơn cho tổng tiền */
        color: #ff6b6b; /* Màu đỏ cho tổng tiền */
        text-align: center; /* Căn giữa tổng tiền */
    }
</style>

<div class="container">
    <h2>Thông tin Thanh Toán</h2>
    <form asp-action="ThanhToan" method="POST">
        @Html.AntiForgeryToken()

        <label for="name">Họ tên:</label>
        <input asp-for="HoaDon.Name" type="text" id="name" placeholder="Nhập họ tên" required />

        <label for="address">Địa chỉ:</label>
        <input asp-for="HoaDon.Address" type="text" id="address" placeholder="Nhập địa chỉ" required />

        <label for="phone">Số điện thoại:</label>
        <input asp-for="HoaDon.PhoneNumber" type="tel" id="phone" placeholder="Nhập số điện thoại" required />

        <label for="total">Tổng tiền:</label>
        <h1 class="total">@Model.HoaDon.Total.ToString("N0") vnđ</h1>

        <button type="submit">Đặt hàng</button>
    </form>
</div>
